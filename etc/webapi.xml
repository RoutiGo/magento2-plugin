<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/routigo/webhook" method="POST">
        <service class="TIG\RoutiGo\Api\WebhookInterface" method="saveRoutigoData"/>
        <resources>
            <!-- Since Magento 2.4.4 Bearer Tokens are rejected, we use our own stored secret for now -->
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
