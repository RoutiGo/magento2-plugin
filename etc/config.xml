<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <carriers>
            <tig_routigo>
                <active>1</active>
                <sallowspecific>1</sallowspecific>
                <specificcountry>NL</specificcountry>
                <model>TIG\Routigo\Model\Carrier\Routigo</model>
                <name>Routigo</name>
                <price>5.00</price>
                <title>Routigo</title>
                <type>I</type>
                <specificerrmsg>This shipping method is not available. To use this shipping method, please contact us.</specificerrmsg>
            </tig_routigo>
        </carriers>
        <tig_routigo>
            <supported_magento_version>2.3.6-p1, 2.4.0 - 2.4.2</supported_magento_version>
            <configuration>
                <mode>0</mode>
            </configuration>

            <endpoints>
                <api_base_url>https://api.routigo.com/api/</api_base_url>
            </endpoints>
        </tig_routigo>
    </default>
</config>
