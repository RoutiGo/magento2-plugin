<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <!--General configuration section-->
    <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Account settings</label>
        <fieldset_css>tig_routigo-sub-section</fieldset_css>
        <field id="mode" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Mode</label>
            <source_model>TIG\RoutiGo\Config\Source\General\Mode</source_model>
            <config_path>tig_routigo/general/mode</config_path>
        </field>
        <field id="api_key" translate="label comment" type="obscure" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Api Key</label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <config_path>tig_routigo/generalconfiguration_extension_status/api_key</config_path>
        </field>
        <field id="create_webhook" translate="label comment" type="button" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <comment><![CDATA[Please save your configuration before creating webhook.]]></comment>
            <frontend_model>TIG\RoutiGo\Block\Adminhtml\Config\General\CreateWebhook</frontend_model>
        </field>
    </group>
</include>
