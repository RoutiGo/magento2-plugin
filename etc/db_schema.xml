<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="default" engine="innodb" >
        <column xsi:type="varchar" name="routigo_delivery_date" length="100" nullable="true" comment="Delivery date"/>
    </table>
    <table name="quote" resource="default" engine="innodb" >
        <column xsi:type="varchar" name="routigo_delivery_date" length="100" nullable="true" comment="Delivery date"/>
    </table>
    <table name="quote_address" resource="default" engine="innodb">
        <column xsi:type="varchar" name="routigo_timeframes_fee" length="100" nullable="true" comment="Timeframes Fee" />
        <column xsi:type="varchar" name="routigo_delivery_date" length="100" nullable="true" comment="Delivery date" />
        <column xsi:type="varchar" name="routigo_visit_after" length="50" nullable="true" comment="Visit after" />
        <column xsi:type="varchar" name="routigo_visit_before" length="50" nullable="true" comment="Visit before" />
    </table>
    <table name="sales_order_address" resource="default" engine="innodb" >
        <column xsi:type="varchar" name="routigo_timeframes_fee" length="100" nullable="true" comment="Timeframes Fee"/>
        <column xsi:type="varchar" name="routigo_delivery_date" length="100" nullable="true" comment="Delivery date"/>
        <column xsi:type="varchar" name="routigo_visit_after" length="50" nullable="true" comment="Visit after" />
        <column xsi:type="varchar" name="routigo_visit_before" length="50" nullable="true" comment="Visit before" />
    </table>
</schema>
